map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name llm.kortexa.ai;
    ssl_certificate /etc/nginx/ssl/llm.kortexa.ai_2048/fullchain.cer;
    ssl_certificate_key /etc/nginx/ssl/llm.kortexa.ai_2048/private.key;
    root /home/francip/src/llm.service;
    index index.html;
    set $allowed 0;
    if ($host = $server_name) {
        set $allowed 1;
    }
    if ($allowed = 0) {
        return 404;
    }
    location / {
        proxy_pass http://localhost:18888;
        proxy_http_version 1.1;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Authorization $http_authorization;
    }
}
server {
    listen 80;
    server_name llm.kortexa.ai;
    location / {
        return 301 https://$host$request_uri;
    }
    location /.well-known/acme-challenge {
        proxy_set_header Host $host;
        proxy_set_header X-Real_IP $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr:$remote_port;
        proxy_pass http://127.0.0.1:9180;
    }
}